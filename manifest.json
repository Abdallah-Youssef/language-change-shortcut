{
    "name": "Language Change",
    "description": "Change language without having to rewrite",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches":  ["https://*.nytimes.com/*"],
            "js": ["script.js"]
        }
    ]
}